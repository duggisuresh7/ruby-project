<p style="color: green"><%= notice %></p>

<h1>Players</h1>

<div id="players">
  <% @players.each do |player| %>
    <%= render player %>
    <p>
      <%= link_to "Show this player", player %>
    </p>
  <% end %>
</div>

<% if Current.user && Current.user.is_admin %> 

  <%= link_to "New player", new_player_path %>

<% end %>

